<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:orientation="vertical"
        tools:context="ui.dashboard.DashboardFragment"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="339dp"
            android:layout_height="195dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/choice_pic" />

        <TextView
            android:id="@+id/mesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="Выберите место:"
            android:textColor="#2D6ACC"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/choice_mesto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            />

        <TextView
            android:id="@+id/usluga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="Выберите услугу:"
            android:textColor="#2D6ACC"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/choice_usluga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/adres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="Выберите адрес:"
            android:textColor="#2D6ACC"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/choice_adres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="Выберите дату:"
            android:textColor="#2D6ACC"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/choice_data"
            android:layout_width="166dp"
            android:layout_height="42dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint=""
            android:inputType="date"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="Выберите время:"
            android:textColor="#2D6ACC"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/choice_time"
            android:layout_width="166dp"
            android:layout_height="42dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint=""
            android:inputType="date"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button_auth"
            android:layout_width="234dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginTop="7dp"
            android:backgroundTint="#2D6ACC"
            android:text="Далее"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
